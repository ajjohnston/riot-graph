{
  "name": "riot-graph",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node lib/index.js",
    "build": "yarn lint && yarn transpile && yarn build-client",
    "build-client": "env NODE_ENV=production webpack -p --bail --config webpack.config.js",
    "dev": "yarn build-client && nodemon src/index.js --exec babel-node --presets env",
    "lint": "eslint src/",
    "transpile": "babel src/ -d lib/"
  },
  "dependencies": {
    "dataloader": "^1.3.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphiql": "^0.11.2",
    "graphql": "^0.10.3",
    "isomorphic-fetch": "^2.2.1",
    "limit-request-promise": "^0.1.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "request-promise": "^4.2.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^2.29.0",
    "nodemon": "^1.11.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "ignore": ["src/client/dist/"]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "plugins": [
      "import",
      "react"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "globals": {
      "document": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "react/jsx-curly-spacing": [
        "error",
        {
          "when": "always"
        }
      ]
    }
  },
  "eslintIgnore": ["src/client/dist/**/*.js"]
}
